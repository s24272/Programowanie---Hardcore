#include <iostream>

int main()
{
	std::string x[5];   
 	std::cout<<"Podaj 5 slow: \n";
    for(int i=0;i<5;i++)
    {
    	std::cin>>x[i];
	}
    for(int i=1; i<=9; i++)
    {
        std::cout << "*";
    }
    std::cout<<std::endl;
   
 	for(int i=0; i<5; i++)
	{
    	std::cout<<"*";
    	std::cout<<" "<<x[i];
    	for(int j=0;j<6-x[i].size();j++)
    	{
    		std::cout<<" ";
		}
    	std::cout<<"*"<<std::endl;
	}
   
    for(int k=1; k<=9; k++)
    {
        std::cout<<"*";
    }
   
}
